<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Application_Final_Status</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Status__c, &quot;Draft&quot;),
  ISCHANGED(Status__c)
)</errorConditionFormula>
    <errorMessage>Application cannot be saved in Draft once submitted.</errorMessage>
</ValidationRule>
