<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Payment_Date</fullName>
    <active>true</active>
    <errorConditionFormula>Payment_Date__c &gt; TODAY()</errorConditionFormula>
    <errorDisplayField>Payment_Date__c</errorDisplayField>
    <errorMessage>Payment Date cannot be in the future.</errorMessage>
</ValidationRule>
