<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Phone</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(Phone_Number__c)) &amp;&amp; LEN(Phone_Number__c) &lt;&gt; 10</errorConditionFormula>
    <errorDisplayField>Phone_Number__c</errorDisplayField>
    <errorMessage>Phone number must be exactly 10 digits.</errorMessage>
</ValidationRule>
